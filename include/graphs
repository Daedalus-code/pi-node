# balance (24hour)
rrdtool graph /var/www/html/balance_graph.png \
  -w 400 -h 164 -a PNG \
  --slope-mode \
  --vertical-label "Wallet Balance" \
  --alt-autoscale-max --lower-limit=1 \
  --color BACK#565875 \
  --color FONT#FFFFFF \
