# wallet daemon uptime function
# function for waiting with stuff before a limit (seconds) is reached
function uptime_daemon() {
  PID="$(pidof trumpcoind 2>&1)"
  HZ=$(getconf CLK_TCK 2>&1)
  UPTIME_CMD=$(awk '{print $1}' </proc/uptime)
  STARTTIME=$(awk '{print $22}' </proc/"$PID"/stat)
  echo $(("${UPTIME_CMD%.*}" - "$STARTTIME" / "$HZ"))
}

# greater than n seconds, continue
if [[ "$(uptime_daemon)" -gt "1" ]] &>/dev/null; then
  # save progress
  grep -o "progress=...." "${WALLET_LOG_DIR:?}"/debug.log 2>&1 | egrep -o "[0-9]+.[0-9]+" 2>&1 | tr -d '.' 2>&1 | tail -1 >"${LOG_DIR:?}"/node_data/tmp/proc 2>&1
  # output progress value several times
  SYNCING_REPLACE_TX=$(egrep "[0-9]+" "${LOG_DIR:?}"/node_data/tmp/proc 2>&1)

  # syncing blockchain with progress bar
  SYNC_PROGRESS_BAR=$(
    # is less than 99
    if [ "$SYNCING_REPLACE_TX" -lt "1" ]; then
      echo -ne "       Loading                                             \\r"
    fi
    # is equal to
    if [ "$SYNCING_REPLACE_TX" -eq "1" ]; then
      echo -ne "     ▓·················································· 1%\\r"
