#!/bin/bash

# By Rainman
# V20220101
# 0.0.3.5

HEIGHT=10
WIDTH=40
CHOICE_HEIGHT=2
BACKTITLE="Trump-Node"
TITLE="Node Options"
MENU="Choose one of the following options:"

OPTIONS=(1 "Turn off node")

CHOICE=$(dialog --clear \
  --backtitle "$BACKTITLE" \
  --title "$TITLE" \
  --menu "$MENU" \
  $HEIGHT $WIDTH $CHOICE_HEIGHT \
  "${OPTIONS[@]}" \
  2>&1 >/dev/tty)

clear
case $CHOICE in

"1")

  kill "$(pidof trumpcoind)" && sleep 3 && sudo reboot

  ;;

esac

# END
